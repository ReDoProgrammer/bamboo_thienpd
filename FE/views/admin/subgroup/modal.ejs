  $('#name').keyup(function () {
    $('#metatitle').val(getMeta($('#name').val()));
  })

  function readURL(input, img) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $("#" + img).attr("src", e.target.result);
        $("#" + img).show(1000);
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
</script>

