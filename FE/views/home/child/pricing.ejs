<script>
  $(document).ready(function () {
    $.ajax({
      url: "/pricing",
      type: "get",
      success: function (data) {
        if(data.sps.length > 0){
          $("#pricing").empty();
          data.sps.forEach((sp) => {
            let item =  '<div class="item">'
            item +=   '<img src="'+sp.thumbnail+'"/>'
            item += '</div>'
          $("#pricing").append(item);
        });
        }
       
       
      },
      error: function (err) {
        console.log(err);
      },
    });
  });
</script>

